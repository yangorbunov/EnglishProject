<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.AddingTestFragment">

    <LinearLayout
        android:id="@+id/l_adding_adding_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wellfleet"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/question"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:autofillHints="question"
            android:hint="@string/enter_question"
            android:id="@+id/adding_test_question"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/wellfleet"
            android:textCursorDrawable="@drawable/cursor_edit_text"
            android:backgroundTint="@color/button_color"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:labelFor="@id/text_ans"
            tools:ignore="TextFields" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/wellfleet"
            android:text="@string/answers_mark"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_share_test"
        app:layout_constraintTop_toBottomOf="@id/l_adding_adding_layout"

        app:layout_constraintStart_toStartOf="parent">

    <RadioGroup
        android:id="@+id/rg_adding_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_1_adding"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/wellfleet"
            android:layout_height="50dp"/>

            <RadioButton
                android:id="@+id/radio_2_adding"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/wellfleet"
                android:layout_height="50dp"/>

            <RadioButton
                android:id="@+id/radio_3_adding"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/wellfleet"
                android:layout_height="50dp"/>

            <RadioButton
                android:id="@+id/radio_4_adding"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/wellfleet"
                android:layout_height="50dp"/>


    </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <EditText
                android:id="@+id/adding_test_1"
                android:hint="@string/answer_one"
                android:fontFamily="@font/wellfleet"
                android:textCursorDrawable="@drawable/cursor_edit_text"
                android:backgroundTint="@color/button_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="answer"
                android:inputType="text"/>

            <EditText
                android:id="@+id/adding_test_2"
                android:hint="@string/answer_two"
                android:fontFamily="@font/wellfleet"
                android:textCursorDrawable="@drawable/cursor_edit_text"
                android:backgroundTint="@color/button_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="answer"
                android:inputType="text"/>

            <EditText
                android:id="@+id/adding_test_3"
                android:hint="@string/answer_three"
                android:fontFamily="@font/wellfleet"
                android:textCursorDrawable="@drawable/cursor_edit_text"
                android:backgroundTint="@color/button_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="answer"
                android:inputType="text"/>

            <EditText
                android:id="@+id/adding_test_4"
                android:hint="@string/answer_four"
                android:fontFamily="@font/wellfleet"
                android:textCursorDrawable="@drawable/cursor_edit_text"
                android:backgroundTint="@color/button_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="answer"
                android:inputType="text"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_share_test"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/button_color"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        android:textColor="@color/white"
        android:fontFamily="@font/wellfleet"
        android:text="@string/share"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>